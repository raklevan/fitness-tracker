<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">

            <form action="/exercises" method="post">
                <h2>Log an exercise</h2>
                <input type="text" class="form-control" name="exercise" placeholder="new exercise" autofocus>
                <input type="text" class="form-control" name="duration" placeholder="duration" autofocus>
                <button class="btn btn-lg btn-primary btn-block" id="submit" type="submit">Submit</button>
                <p><a href="/exercise">See your exercise Log</a></p>
            </form>
        </div>
    </div>
    <div class="row">

        {{#each exercises}}
        <div class="col-md-3">

            <div class="card">
                <h2 class="card-title">

                    {{exercise}}

                </h2>
                <div class="card-body">
                    <h3>Time: {{time}}</h3>
                    <h3>Duration: {{duration}}</h3>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</div>